{
    // resolution
    // testing
    // nx : 50, // width
    // ny : 20, // height
    // nm : 20,  // number of simultaneous simulations
    
    // nice version
    nx : 100, // width
    ny : 50, // height
    nm : 100,  // number of simultaneous simulations
    // geometry
    H : 1, // (m)

    // material properties
    repose_angle : [0,5,10,15,20,25,30,35,40,45], // (degrees)
    gsd_mode : 'mono',
    s_m : 0.0005, // minimum particle size (m)
    s_M : 0.0005, // maximum particle size (m)
    nu_cs : 0.5,
    alpha : 1,
    
    // initial condition:
    fill_ratio : 0.25,
    nu_fill : 0.5,
    IC_mode : "column",
    
    // saving
    save_inc : 10,
    t_f : 100,  // s
    plot : ['nu'],
    videos : ['nu'],
    save : ['nu'],
    mask_s_bar : false,

    // parallel
    max_workers : 5, // leave some cores on my poor little laptop
}
