{
    // resolution
    nx : 51, // width
    
    // geometry
    H : 1, // (m)
    aspect_ratio_y : 1,  // ny = aspect_ratio * nx
    nm : 100,

    // material properties
    repose_angle : 30, // (degrees)
    gsd_mode : 'mono',
    s_m : 0.01, // minimum particle size (m)
    s_M : 0.01, // maximum particle size (m)
    nu_cs : 0.5,
    alpha : [1,5,10],
    
    // initial condition:
    fill_ratio : 0.5,
    nu_fill : [0.2,0.5,0.8],
    IC_mode : "left_column",
    
    // saving
    saves : 100,   // how many saves to make
    t_f : 5,  // s - cant use null because of repose_angle=0 :(
    
    plot : ['nu', 'stress'],
    videos : ['nu','stress'],
    save : ['nu'],
    mask_s_bar : false,

    // parallel
    max_workers : 3, // leave some cores on my poor little laptop
}
